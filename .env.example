# =============================================================================
# Attested Governance Portal - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values

# =============================================================================
# APPLICATION
# =============================================================================

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================

# PostgreSQL connection string (required for Prisma)
# Use the Transaction pooler connection for serverless (port 6543)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres:password@localhost:5432/sovereign_vault

# Direct connection for migrations (port 5432, no pooler)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DIRECT_URL=postgresql://postgres:password@localhost:5432/sovereign_vault

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (server-side only, never expose)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret for session tokens
JWT_SECRET=your-secure-random-secret-min-32-chars

# =============================================================================
# EMAIL (Resend)
# =============================================================================

# Resend API key for transactional emails
RESEND_API_KEY=re_your_api_key

# From email address
EMAIL_FROM=noreply@yourdomain.com

# From name
EMAIL_FROM_NAME=AGA Portal

# =============================================================================
# ARWEAVE
# =============================================================================

# Arweave gateway URL
ARWEAVE_GATEWAY=https://arweave.net

# =============================================================================
# CRYPTO
# =============================================================================

# Ed25519 issuer public key (base64url encoded)
NEXT_PUBLIC_ISSUER_PUBLIC_KEY=your-public-key

# =============================================================================
# FEATURES
# =============================================================================

# Enable premium features
FEATURE_PREMIUM_ENABLED=true

# Enable Arweave anchoring
FEATURE_ARWEAVE_ENABLED=false

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Skip email sending in development
SKIP_EMAIL=true

# Use mock data
USE_MOCK_DATA=true
